extends ../layout.jade
block contenido
	h1 Panel de administracion
	table(class="table")
		caption Productos actuales
		thead
			tr
				th #
				th Nombre
				th Descipcion
				th Precio
				th Imagenes
				th Accciones
		tbody
			each product in products
				tr
					td= product.id
					td= product.title
					td= product.description
					td= product.pricing
					td
						a(href="#{product.imageUrl}" class="btn") Ver imagen
					td  
						a(href="/productos/edit/#{product.id}") Editar
						="-"
						a(href="/productos/delete/#{product.id}") Eliminar

