extends ../layout.jade
block contenido
	div(class="col-md-5 center-block quitar-float espacio-arriba text-left")
		h1 Editar producto
		form(method="POST" action="/productos/#{product.id}?_method=put" style="margin-top:1.5em;" enctype="multipart/form-data")
			div(class="form-group")
				label Nombre
				input(type="text" name="title" value="#{product.title}" placeholder="Nombre del item" class="form-control")
			div(class="form-group")
				label Descripcion
				textarea(name="description" placeholder="Descripcion del item" class="form-control")
					=product.description
			div(class="form-group")
				label Costo
				input(type="number" name="pricing" placeholder="Precio" class="form-control" value="#{product.pricing}")
			div(class="form-group")
				label Imagen del producto
				input(type="file" name="image_avatar")
			div(class="form-group")
				label Contrasena
				input(type="password" name="password" placeholder="Contrasena" class="form-control")
			div(class="form-group text-right")
				input(type="submit" class="btn btn-info" value="Guardar")